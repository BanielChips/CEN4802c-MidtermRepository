pipeline {
    agent any

    stages {
        stage('Clone repository') {
            steps {
                // Pull the code from your version control system (e.g., Git)
                git branch: 'main', url: 'https://github.com/BanielChips/CEN4802c-MidtermRepository.git'
            }
        }

        stage('Compile') {
            steps {
                // Navigate to the correct directory where pom.xml is located and compile
                dir('CEN4802c-MidtermRepository/JavaCalculator') {
                    echo 'Compiling...'
                    bat 'mvn clean compile'
                }
            }
        }

        stage('Build') {
            steps {
                // Change to the directory containing your pom.xml
                dir('CEN4802c-MidtermRepository') {
                echo 'Building...'
                echo WORKSPACE
                    // Run Maven command to build the project
                    bat 'mvn clean install'
                }
            }
        }

        stage('Run') {
            steps {
                // Run the compiled Java program
                dir('CEN4802c-MidtermRepository') {
                    bat 'mvn exec:java -Dexec.mainClass="JavaCalculator"'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline execution completed.'
        }
        success {
            echo 'Build and Run succeeded!'
        }
        failure {
            echo 'Build or Run failed.'
        }
    }
}
